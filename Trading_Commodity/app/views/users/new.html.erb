
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "Enter Username" %>

      <%= f.label :email %>
      <%= f.email_field :email, :placeholder => "Enter Email Id" %>

      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => "Enter password" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, :placeholder => "Re-type Password" %>
      
      <%= f.label :latitude %>
      <%= f.text_field :latitude, :placeholder => "Enter Latitude"%>
      
      <%= f.label :longitude %>
      <%= f.text_field :longitude, :placeholder => "Enter Longitude"%>
      
      <%= f.label :category %>
      <%= f.select :category, [['Buyer', 'Buyer'],['Seller','Seller']]%>
     
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    <% if @user.errors.any? %>
	<ul class="Signup_Errors">
		<% for message_error in @user.errors.full_messages %>
			<li>* <%= message_error %></li>
	  	<% end %>
	</ul>
  <% end %>
  </div>
  
</div>