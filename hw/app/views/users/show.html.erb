
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="div">
  <div class="<%= @user.type %>">
    <div class="logout" style="float:right">
       <%= link_to "Log out", logout_path, method: :delete %>
    </div>
 
    <div class="form-group">
       <div class="col-md-12 control">
         <%= f.label :username %>
       </div>
       <input type="text" value="<%= @user.username %>" placeholder="" readonly>
    </div>
  <div class="form-group">
    <div class="col-md-12 control">
    <%= f.label :email %>
    </div>
    <input type="text" value="<%= @user.email %>" placeholder="" readonly>
  </div>
  <div class=">form-group">
    <div class="col-md-12 control">
     <%= f.label :latitude %>
    </div>
    <input type="text" value="<%= @user.latitude %>" placeholder="" readonly>
  </div>
  <div class="form-group">
    <div class="col-md-12 control">
    <%= f.label :longitude %>
    </div>
    <input type="text" value="<%= @user.longitude %>" placeholder="" readonly>
  </div>
  <div class="form-group">
    <div class="col-md-12 control">
    <%= f.label :commodity %>
    </div>
    <input type="text" value="<%= @user.commodity %>" placeholder="0" readonly>
  </div>
  <%= link_to 'Edit', edit_user_path(@user) %>
<% end %>
</div>
</div>