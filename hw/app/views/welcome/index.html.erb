<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <%= stylesheet_link_tag    'application', media: 'all','data-turbolinks-track' => true %>
  </head>
<div class="main_frame">
	     <div class="container">    
        <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                      <% if params[:notice] %>
                        <div id="error_explanation"><%= params[:notice] %></div>
                      <% end %>
                       <div class="panel-title pull-left">Welcome Buyer Meet Seller</div>
                       <div class="clearfix"></div>
                    <div>
 <%= form_for :login, url: login_path do |f| %>
  <div class="form-group">
    <div class="col-md-12 control">
    <%= f.label :username %>
    </div>
    <%= f.text_field :username , class: "form-control"  %>
  </div>
  <div class="form-group">
    <div class="col-md-12 control">
    <%= f.label :password %>
    </div>
    <%= f.password_field :password,  class: "form-control"  %>
  </div>
  </div>
  <div class="form-group">
    <div class="col-md-12 control">
    <%= f.label :UserType %>
    </div>
    <%= f.select :type,  [['Buyer', 'Buyer'],['Seller','Seller'],['Admin','Admin']],  class: "form-control" %>
  </div>
  <p>
    <%= f.submit "Log in", class: "btn btn-primary"  %>
  </p>
<% end %>
<div class="form-group">
   <div class="col-md-12 control">
     <div class="signup-link">New user? <%= link_to "Sign up now!", new_user_path %></div>
    </div>
</div>
</div>
</div>
</div>
</div>

</html>

