 <!--%= form_for @addproducts, html: {multipart: true, class: "form-horizontal"} do |f| %-->
<h1>Sell Products here</h1>

<script type="text/javascript">
        $(function() {

            Timers.init();

        });
    </script>
<p>
  <div data-countdown-until="<%= 10.days.from_now %>"></div>
</p>

<div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_time, "End Date", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_field :end_time, :default => Date.today %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :picture, "Image", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :picture %>
      </div>
  </div>
  <div class="form-group col-sm-2 control-label">
    <%= f.submit %>
  </div>